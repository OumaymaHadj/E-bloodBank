<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginStart="30dp"
        android:background="@drawable/bgkonten"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="68dp"
            android:layout_height="54dp"
            android:src="@drawable/logoooo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="-40dp"
            android:text="We will be thankful for your help"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnRequest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/donor_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.153" />

        <TextView
            android:id="@+id/description"
            android:layout_width="246dp"
            android:layout_height="101dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_red_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="53dp">

            <Button
                android:id="@+id/okAccept"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_complet"
                android:fontFamily="@font/hubbali"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cancel"
                app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cancel"
                app:layout_constraintVertical_bias="0.0" />
            <Button

                android:layout_marginStart="30dp"
                android:id="@+id/cancelDialog"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/hubbali"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="14dp"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>