<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@android:color/white"
    android:orientation="vertical">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardViewToolbar"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_shapeType="flat"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_700"
            app:titleTextColor="@color/white">
            <TextView
                android:id="@+id/textToolbar"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text=" Eligibility test"
                />
            <ImageView
                android:id="@+id/quit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_back" />

        </androidx.appcompat.widget.Toolbar>


    </soup.neumorphism.NeumorphCardView>


    <ImageView
        android:layout_width="217dp"
        android:layout_height="149dp"
        android:src="@drawable/impor"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewToolbar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:fontFamily="sans-serif"
        android:text="Please note that your eligibility will also be confirmed by the medical staff at the time of your appointment."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/start"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="238dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:text="Let's start"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/hubbali"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_backgroundColor="@color/teal_700"
        tools:ignore="MissingConstraints">

    </soup.neumorphism.NeumorphButton>



</androidx.constraintlayout.widget.ConstraintLayout>